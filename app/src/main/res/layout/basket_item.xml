<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    style="@style/Base.Animation.AppCompat.Dialog">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/productImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@color/accent_material_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price: 53"
        android:textSize="12sp"
        android:id="@+id/productPrice"
        android:layout_alignBottom="@+id/productImage"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="26dp"
        android:maxHeight="26dp"
        android:minHeight="26dp"
        android:maxWidth="190dp"
        android:minWidth="190dp"
        android:textSize="12sp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="productName"
        android:id="@+id/productName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/productImage"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:id="@+id/removeProduct"
        android:layout_alignBottom="@+id/productName"
        android:layout_alignStart="@+id/productPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kogus: 3"
        android:id="@+id/quantity"
        android:layout_above="@+id/productPrice"
        android:layout_alignParentEnd="true" />

</RelativeLayout>